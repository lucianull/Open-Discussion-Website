@model OpenDiscussion.Models.Comment

<h2 class="text-center mt-5">Editare comentariu</h2>
@if (Model.CommentId != ViewBag.IdAux && ViewBag.IdAux != null)
    {
    Model.CommentId = ViewBag.IdAux;
    }

<form method="post" action="/Comments/Edit/@Model.CommentId">
    @Html.Label("Content", "Continut comentariu")
    <br />
    @Html.ValidationMessage("Content", null, new {@class="text-danger"})
    @Html.Editor("Content")
    <br />
    <button class="btn btn-success" type="submit">Editeaza comentariul</button>
</form>