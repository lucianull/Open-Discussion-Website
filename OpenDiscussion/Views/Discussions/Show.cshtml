@model OpenDiscussion.Models.Discussion

@if (TempData.ContainsKey("Message"))
{
    <p>@TempData["Message"]</p>
    <br/>
}
<br/>
<div>
    <a class="btn btn-success" href="/Discussions/Index/@Model.TopicId">Inapoi</a>
</div>
<br/>
<br/>

<div class="card">
    <div class="card-body">
        <h3>@Model.Title</h3>
        <div class="w-75 p-3" style="background-color: #eee;">@Model.Content</div>
        <br/>
        <small>@Model.User.UserName</small>
    </div>
</div>

@foreach (var comment in Model.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <p>@comment.Content</p>
                    <small>@comment.Date</small>
                    <small>@comment.User.UserName</small>
                </div>
                <br />
                <div class="d-flex flex-row">
                    <a class="btn btn-success p-2" href="/Comments/Edit/@comment.CommentId">Editare comentariu</a>
                    <form method="post" action="/Comments/Delete/@comment.CommentId">

                        <button class="btn btn-outline-danger p-2" type="submit"><i class="bi bi-trash">Sterge</i></button>

                    </form>
                </div>
            </div>
            <div class="col-md-2"></div>
            
        </div>
        
    </div>
    <br />
}

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                <form method="post" action ="/Discussions/Show/@Model.DiscussionId">
                    <div class="card-body">
                        <input type="hidden" name="DiscussionId" value="@Model.DiscussionId" />
                        <label>Continut comentariu</label>
                        <br />
                        @Html.ValidationMessage("Content", null, new {@class="text-danger"})
                        <textarea class="form-control" name="Content"></textarea>
                        <br /><br />
                        <button class="btn btn-success" type="submit">Adauga comentariu</button>
                    </div>    
                </form>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>