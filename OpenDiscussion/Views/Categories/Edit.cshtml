@model OpenDiscussion.Models.Category

<h2 class="text-center mt-5">Editare categorie</h2>

<br />
<div>
    <a class="btn btn-success" href="/Categories/Index">Inapoi</a>
</div>
<br />
<br />

<form method="post" action="/Categories/Edit/@Model.CategoryId">
    @Html.Label("Name", "Denumire categorie")
    <br />
    @Html.ValidationMessage("Name", null, new {@class="text-danger"})
    @Html.Editor("Name")
    <br /><br />
    @Html.Label("Description", "Descriere categorie")
    <br />
    @Html.ValidationMessage("Description", null, new {@class="text-danger"})
    @Html.Editor("Description")
    <br />
    <button class="btn btn-success" type="submit">Modifica categoria</button>
</form>