@model OpenDiscussion.Models.Category


<h2 class="text-containter mt-5">Adaugare categorie</h2>

<br />
<br />

<div class="container">
    <div class="col-2">
        <form method="post" action="/Categories/New">
            @Html.Label("Name", "Nume Categorie")
            <br />
            <br />
            @Html.ValidationMessage("Name", null, new {@class="text-danger"})
            @Html.TextBox("Name", null, new {@class="form-control"})
            <br />
            <br />
            @Html.Label("Description", "Descrierea categoriei")
            <br />
            <br />
            @Html.ValidationMessage("Description", null, new {@class="text-danger"})
            @Html.TextArea("Description", null, new {@class="form-control"})
            <button class="btn btn-success" type="submit">Adauga categorie</button>
        </form>
    </div>
</div>