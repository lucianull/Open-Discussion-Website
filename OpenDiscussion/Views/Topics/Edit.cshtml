@model OpenDiscussion.Models.Topic

<h2 class="text-center mt-5">Editare Topic</h2>

<form method="post" action="/Topics/Edit/@Model.TopicId">
    @Html.Label("Name", "Denumire topic")
    <br />
    @Html.ValidationMessage("Name", null, new {@class="text-danger"})
    @Html.Editor("Name")
    <br /><br />
    @Html.Label("Description", "Descriere topic")
    <br />
    @Html.ValidationMessage("Description", null, new {@class="text-danger"})
    @Html.Editor("Description")
    <br />
    <button class="btn btn-success" type="submit">Modifica topicul</button>
</form>